	$(gui_OBJ) $(gui_calc_OBJ) $(gui_debugger_OBJ) $(kde_OBJ) \
	$(core_gdb_ARC)

#rules:
all: uae gdb tiemu

uae:
	cd core/uae && $(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)" gen
	cd core/uae && $(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)" all

gdb:
	cd core/gdb && $(MAKE)

tiemu: $(tiemu_OBJ)
#	$(CC) $(uae_OBJ) $(tiemu_OBJ) $(core_gdb_ARC) -o tiemu $(LDFLAGS) $(CFLAGS)
	../libtool --mode=link $(CC) $(uae_OBJ) $(tiemu_OBJ) $(core_gdb_ARC) \
	-o tiemu $(LDFLAGS) $(CFLAGS) $(kdelibraries) $(GDBLIBS)

.c.o:
	$(CC) $(INCLUDES) $(DEFS) -c $(CFLAGS) $< -o $@
	#../libtool --mode=compile $(CC) $(INCLUDES) $(DEFS) \
	#-c $(CFLAGS) $< -o $@

.cpp.o:
	$(CXX) $(INCLUDES) $(DEFS) -c $(CXXFLAGS) $(kdeincludes) $< -o $@
	#../libtool --mode=compile $(CC) $(INCLUDES) $(DEFS) \
	#-c $(CFLAGS) $< -o $@

clean:
	@cd core/uae && $(MAKE) clean
	@cd core/gdb && $(MAKE) clean
	@rm -f $(tiemu_OBJ) tiemu tiemu.exe $(kdeprivsources)

distclean: clean
	@cd core/uae && $(MAKE) distclean
	@cd core/gdb && $(MAKE) distclean
	@rm -Rf .libs

dos2unix:
	dos2unix
	lowercase
	uppercase

distdir: clean
	cp -rl * ../tiemu-@VERSION@/src

install: tiemu
	@$(INSTALL) -d $(prefix)/bin
	$(INSTALL) -m755 tiemu ${prefix}/bin/
